    input.checked = !input.checked;
  });
  
//  Start countdown
    const countdown_mins = 10;
    const countdown_secs = 0;

    const second = 1000,
        minute = second * 60,
        hour = minute * 60,
        day = hour * 24;

    const counter = document.querySelector('#countdown');
    const counter_mins = document.querySelector('#countdown .mins');
    const counter_secs = document.querySelector('#countdown .secs');

    const end_time = new Date();
    end_time.setMinutes(end_time.getMinutes() + countdown_mins);
    end_time.setSeconds(end_time.getSeconds() + countdown_secs);

    let countdown_interval = setInterval(() => {
        let current_time = new Date();
        let distance = end_time - current_time;

        let current_mins = Math.floor((distance % (hour)) / minute);
        let current_secs = Math.floor((distance % (minute)) / second);

        if (current_mins < 0) {
            current_mins = '00';
        } else if (current_mins < 10) {
            current_mins = '0' + current_mins;
        }

        if (current_secs < 0) {
            current_secs = '00';
        } else if (current_secs < 10) {
            current_secs = '0' + current_secs;
        }

        if (current_secs == '00' && current_mins == '00') {
            counter.innerHTML = 'Times up';
            clearInterval(countdown_interval);
        }

        counter_mins.innerHTML = current_mins;
        counter_secs.innerHTML = current_secs;
    }, 500);
</script>




